                }
            }
        },
        "rest.tRegistration": {
            "type": "object",
            "properties": {
                "login": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "rest.tWithdraw": {
            "type": "object",
